
@{
    ViewBag.Title = "GuessingGame";
}

<h2 class="text-primary">Guessing Game</h2>
<h4 class="text-success">Vänligen gissa ett tal mellan 0 och 1000</h4>

@using (Html.BeginForm("GuessingGame", "Home", FormMethod.Post))
{
    @Html.TextBox("guessNumber", null, new { @class = "form-control" })
}

@if (ViewBag.message != null)
{
    @ViewBag.message;
}
