@model IEnumerable<FormsAndInputs.Models.Person>

@{
    ViewBag.Title = "View Model";
}

<h2>View Model</h2>

<!DOCTYPE html>

<html>

<head>

    <meta name="viewport" content="width=device-width" />

    <title>Index</title>

</head>

<body>
    @using (Html.BeginForm("Index", "ViewModel", FormMethod.Post))
    {
        @:Filter by name: <input type="text" name="filter" />
        <input type="submit" name="search" value="Search" />
    }
    <hr />
    <table cellspacing="5px;">
        <tr>
            <th>
                @Html.DisplayNameFor(Person => Person.Name)
            </th>
            <th>
                @Html.DisplayNameFor(Person => Person.Phonenr)
            </th>
            <th>
                @Html.DisplayNameFor(Person => Person.City)
            </th>
        </tr>
 
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phonenr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    <a href="/ViewModel/Delete/@item.Idx">Delete</a>
                </td>
            </tr>
        }
    </table>
</body>
</html>
